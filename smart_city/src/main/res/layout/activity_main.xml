<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/beijing"
        android:src="@mipmap/beijingliu"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/music"
                android:id="@+id/tubiao"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.53"
                    android:gravity="center_vertical|right"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp" 
                        android:src="@mipmap/zhanghao"
                        android:layout_marginRight="7dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:weightSum="1">

                    <EditText
                        android:layout_gravity="center"
                        android:maxLength="12"
                        android:textColor="#e2dcdc"
                        android:hint="Username"
                        android:textColorHint="#e2dcdc"
                        android:textSize="20sp"
                        android:id="@+id/idname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.55"
                    android:gravity="center_vertical|right"
                    >
                    <ImageView
                        android:layout_marginRight="7dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/mima"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_gravity="center"
                        android:maxLength="12"
                        android:textColor="#e2dcdc"
                        android:textColorHint="#e2dcdc"
                        android:hint="Password"
                        android:textSize="20sp"
                        android:id="@+id/password"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.54"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ" />

                    <CheckBox
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBox"
                        android:layout_weight="0.55" />


                </LinearLayout>
                

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <Button
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:background="#2196f3"
                    android:text="Sign in"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:id="@+id/Sign_in_bt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">
                    <Button
                        android:id="@+id/find_password_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" 
                        android:text="忘记密码"
                        android:textColor="#FFFFFF"
                        android:background="#00000000"
                        android:layout_marginRight="2dp"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/register_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="注册账号"
                        android:textColor="#FFFFFF"
                        android:background="#00000000"
                        android:layout_marginLeft="2dp"/>
                    

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
